{% extends '::sidebar.html.twig' %} 
{% block body_site %} 
<section id="slider" class="force-full-screen full-screen">

            <div class="force-full-screen full-screen dark" style="background-image: url('{{ asset('bundles/site/images/saascrm/login-parallax.jpg') }}');
            		padding: 70px 0px 150px;">

                <div class="content-wrap"> 
                        
					<div class="col_half nobottommargin">&nbsp;</div>
					<div class="col_one_third nobottommargin">
                        <div class="well well-lg nobottommargin">
                        {% if error %}    
                        <div class="alert alert-danger nobottommargin">
                          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                          <i class="icon-remove-sign"></i><strong>Oh snap!</strong> {{ error|trans({}, 'FOSUserBundle') }}
                        </div>
                        {% endif %} 
             	<form class="login-form"  action="{{ path("fos_user_security_check") }}" method="post"> 
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                 <div class="heading-block nobottommargin nobottomborder">
			                        <h2>Welcome to eCRM</h2> 
			                    </div>
                <div  class="col_full">
                    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                    <label class="control-label visible-ie8 visible-ie9">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                    <div class="input-icon">
                        <i class="fa fa-user"></i>
                        <input class="required form-control input-lg not-dark input-block-level" type="text" autocomplete="off" placeholder="Email Address" name="_username"  />
                    </div>
                </div>
                <div  class="col_full">
                    <label class="control-label visible-ie8 visible-ie9">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                    <div class="input-icon">
                        <i class="fa fa-lock"></i>
                        <input  class="required form-control input-lg not-dark input-block-level "  type="password" autocomplete="off" placeholder="Password" name="_password"/>
                    </div>
                </div> 
                 <div class="col_full nobottommargin">
                 <label class="checkbox">
                        <input type="checkbox" id="remember_me" name="_remember_me" checked/> Remember me </label>
                      	<button class="button button-3d nomargin" id="login-form-submit" name="login-form-submit" value="login">Login</button>
                       	<a href="#" class="fright">Forgot Password?</a>
                                </div>
            </form>
                        </div>

                    </div>
						 

					 
					</div>
				

            </div>

        </section>
        {% endblock %}