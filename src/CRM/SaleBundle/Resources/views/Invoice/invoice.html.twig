{% extends '::sidebar.html.twig' %}
{% set selected = 'sales_manager' %}
{% block javascripts_bottom %}
    {{ parent() }}
    <script src="{{ asset('..//bundles/crm/plugins/forms_editors_wysihtml5/js/wysihtml5-0.3.0_rc2.min.js?v=v2.0.0-rc1&amp;sv=v0.0.1.2') }}"
    type="text/javascript"></script>
    <script src="{{ asset('..//bundles/crm/plugins/forms_editors_wysihtml5/js/bootstrap-wysihtml5-0.0.2.js?v=v2.0.0-rc1&amp;sv=v0.0.1.2') }}"
    type="text/javascript"></script>
    <script src="{{ asset('..//bundles/crm/components/forms_editors_wysihtml5/wysihtml5.init.js?v=v2.0.0-rc1') }}"
    type="text/javascript"></script>
    <script src="{{ asset('..//bundles/crm/plugins/forms_elements_bootstrap-datepicker/js/bootstrap-datepicker.js?v=v2.0.0-rc1&amp;sv=v0.0.1.2') }}"
    type="text/javascript"></script>
    <script src="{{ asset('..//bundles/crm/components/forms_elements_bootstrap-datepicker/bootstrap-datepicker.init.js?v=v2.0.0-rc1&amp;sv=v0.0.1.2') }}"
    type="text/javascript"></script>
    <script src="{{ asset('..//bundles/crm/plugins/forms_elements_select2/js/select2.js?v=v2.0.0-rc1&amp;sv=v0.0.1.2') }}"
    type="text/javascript"></script>
    <script src="{{ asset('..//bundles/crm/components/forms_elements_select2/select2.init.js?v=v2.0.0-rc1&amp;sv=v0.0.1.2') }}"
    type="text/javascript"></script>
    <script src="{{ asset('..//bundles/crm/plugins/ui_modals/bootbox.min.js?v=v2.0.0-rc1&amp;sv=v0.0.1.2') }}"
    type="text/javascript"></script>
    <script src="{{ asset('..//bundles/crm/components/ui_modals/modals.init.js?v=v2.0.0-rc1&amp;sv=v0.0.1.2') }}"
    type="text/javascript"></script>
    <script src="{{ asset('..//bundles/crm/plugins/notifications_gritter/js/jquery.gritter.min.js?v=v2.0.0-rc1&amp;sv=v0.0.1.2') }}"
    type="text/javascript"></script>
    <script src="{{ asset('..//bundles/crm/components/admin_notifications_gritter/gritter.init.js?v=v2.0.0-rc1&amp;sv=v0.0.1.2') }}"
    type="text/javascript"></script> 
    <script src="{{ asset('..//bundles/crm/components/admin_notifications_notyfy/notyfy.init.js?v=v2.0.0-rc1&amp;sv=v0.0.1.2') }}"
    type="text/javascript"></script>
    <script src="{{ asset('..//bundles/crm/plugins/notifications_notyfy/js/jquery.notyfy.js?v=v2.0.0-rc1&amp;sv=v0.0.1.2') }}"
    type="text/javascript"></script>

{% endblock %} 
{% block body %}
    <div class="row row-app">
        <div class="col-md-7 col-lg-6">
            <div class="col-separator col-separator-first box col-unscrollable">
                <div class="col-table">
                    <div class="col-table-row">
                        <div class="col-app col-unscrollable">
                            <div class="col-app">
                                <div class="col-table">
                                    <h4 class="innerAll margin-none border-bottom">Invoice No. : {{ invoice.invoiceNumber }}</h4>

                                    <div class="col-table-row">
                                        <div class="col-app col-unscrollable">
                                            <div class="col-app">
                                                <div class="col-separator box bg-gray">

                                                    <h5 class="innerAll margin-none bg-white strong border-bottom"><i
                                                            class="fa fa-fw fa-calendar"></i>  Created
                                                        on {{ invoice.creationDate|date("d M Y h:i A") }}</h5>

                                                    <div class="innerAll bg-white">

                                                        <div class="innerAll">
                                                            <!-- PATIENT OVERVIEW START -->
                                                            <div class="media">
                                                                <div class="media-body innerAll half">
                                                                    <h4 class="media-heading">{{ invoice.invoiceCustomerName }}</h4>

                                                                    <p>Sales Rep: {{ invoice.salesRep }}</p>
                                                                </div>
                                                            </div>
                                                            <!-- // END PATIENT OVERVIEW -->

                                                        </div>
                                                        <div class="col-separator-h box"></div>
                                                        <div class="relativeWrap">
                                                            <div class="box-generic">

                                                                <!-- Tabs Heading -->
                                                                <div class="tabsbar tabsbar-2">
                                                                    <ul class="row row-merge">
                                                                        <li class="col-md-3 glyphicons briefcase active"><a href="#tab1-4"
                                                                                                                            data-toggle="tab"><i></i>
                                                                                Sold To</a></li>
                                                                        <li class="col-md-3 glyphicons cart_in"><a href="#tab1-3"
                                                                                                                            data-toggle="tab"><i></i>
                                                                               Items</a></li>        
                                                                        <li class="col-md-3 glyphicons cardio"><a href="#tab2-4"
                                                                                                                     data-toggle="tab"><i></i>
                                                                                History</a></li> 
                                                                    </ul>
                                                                </div>
                                                                <!-- // Tabs Heading END -->

                                                                <div class="tab-content">

                                                                    <!-- Tab content -->
                                                                    <div class="tab-pane active" id="tab1-4">

                                                                        <form class="form-horizontal innerAll" id="frmcreateproduct">
                                                                            <div class="form-group">
                                                                                <label class="col-sm-4 control-label">Sold To</label>

                                                                                <div class="col-sm-8">
                                                                                    <input type="email" class="form-control"
                                                                                           value="{{ invoice.invoicePerson }}" readonly="true">

                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <label class="col-sm-4 control-label">Street</label>

                                                                                <div class="col-sm-8">
                                                                                    <input type="email" class="form-control"
                                                                                           value="{{ invoice.invoiceStreet }}" readonly="true">

                                                                                </div>
                                                                            </div>

                                                                            <div class="form-group">
                                                                                <label class="col-sm-4 control-label">City</label>

                                                                                <div class="col-sm-8">
                                                                                    <input type="email" class="form-control"
                                                                                           value="{{ invoice.invoiceCity }}" readonly="true">

                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <label class="col-sm-4 control-label">State</label>

                                                                                <div class="col-sm-8">
                                                                                    <input type="email" class="form-control"
                                                                                           value="{{ invoice.invoiceState }}" readonly="true">

                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <label class="col-sm-4 control-label">Country</label>

                                                                                <div class="col-sm-8">
                                                                                    <input type="email" class="form-control"
                                                                                           value="{{ invoice.invoiceCountry }}" readonly="true">

                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <label class="col-sm-4 control-label">Email</label>

                                                                                <div class="col-sm-8">
                                                                                    <input type="email" class="form-control"
                                                                                           value="{{ invoice.invoiceEmail }}" readonly="true">

                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <label class="col-sm-4 control-label">Phone</label>

                                                                                <div class="col-sm-8">
                                                                                    <input type="email" class="form-control"
                                                                                           value="{{ invoice.invoicePhone }}" readonly="true">

                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <label class="col-sm-4 control-label">Mobile</label>

                                                                                <div class="col-sm-8">
                                                                                    <input type="email" class="form-control"
                                                                                           value="{{ invoice.invoiceMobile }}" readonly="true">

                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <label class="col-sm-4 control-label">Fax</label>

                                                                                <div class="col-sm-8">
                                                                                    <input type="email" class="form-control"
                                                                                           value="{{ invoice.invoiceFax }}" readonly="true">

                                                                                </div>
                                                                            </div>
                                                                        </form>


                                                                    </div>
                                                                    <!-- // Tab content END --> 
                                                                    <div class="tab-pane" id="tab1-3">
                                                                     <div class="clearfix"></div><div class="clearfix"></div>
                                                                Total products added: {{ productslist|length }}
                                                                <span class="pull-right">
                                                                     
                                                                </span>

                                                                <div class="clearfix"></div>

                                                                <!-- Table -->
                                                                <table class="table table-bordered table-condensed table-striped table-primary table-vertical-center checkboxs">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Product</th>
                                                                            <th class="center">Price ({{invoice.amountCurrency}})</th>
                                                                            <th class="center">Units</th>
                                                                            <th class="center">Qty</th>
                                                                            <th class="center">Amt</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        {% for product in productslist %}
                                                                            <!-- Item -->
                                                                            <tr class="selectable">
                                                                                <td><strong>{{ product.productname }}</strong><br/>
                                                                                    <small>Code: {{ product.productcode }}</small>
                                                                                </td>
                                                                                <td class="center">{{ product.productprice }}</td>
                                                                                <td class="center">{{ product.pricetype }}</td>
                                                                                <td class="center">{{ product.quantity }}</td>
                                                                                 <td class="center">{{ product.amount }}</td>
                                                                            </tr>
                                                                        {% endfor %}
                                                                        <!-- // Item END -->             </tbody>
                                                                </table>
                                                                    </div>
                                                                    <!-- Tab content -->
                                                                    <div class="tab-pane" id="tab2-4">
                                                                        <!-- col-app -->
                                                                        <div class="col-app col-unscrollable">

                                                                            <!-- col-app -->
                                                                            <div class="col-app bg-primary-light">

                                                                                <ul class="timeline-activity list-unstyled">
                                                                                    {% for recent_activity in recent_activities %}
                                                                                        <li>
                                                                                            {% if "created" in recent_activity.activityDesc %}
                                                                                                <i class="list-icon fa fa-plus"></i>
                                                                                            {% elseif "delete" in recent_activity.activityDesc %}
                                                                                                <i class="list-icon fa fa-minus"></i>
                                                                                            {% elseif "update" in recent_activity.activityDesc %}
                                                                                                <i class="list-icon fa fa-edit"></i>
                                                                                            {% elseif "contact" in recent_activity.activityDesc %}
                                                                                                <i class="list-icon fa fa-user"></i>
                                                                                            {% else %}
                                                                                                <i class="list-icon fa fa-user"></i>
                                                                                            {% endif %}
                                                                                            <div class="block block-inline">
                                                                                                <div class="caret"></div>
                                                                                                <div class="box-generic">
                                                                                                    <div class="timeline-top-info">
                                                                                                        <i class="fa fa-user"></i>
                                                                                                        {% if recent_activity.activityUser == app.user.email %}
                                                                                                            {% set you = "You" %}
                                                                                                        {% else %}
                                                                                                            {% set you = recent_activity.activityUser %}
                                                                                                        {% endif %}


                                                                                                        {% autoescape false %}{{ recent_activity.activityDesc |replace({"creation_user": "<span class='text-primary'><strong>" ~ you ~ "</strong></span>" |raw }) }}{% endautoescape %}


                                                                                                    </div>
                                                                                                </div>
                                                                                                <div class="timeline-bottom">
                                                                                                    <i class="fa fa-clock-o"></i> {{ recent_activity.dateAdded|date("H:i") }}
                                                                                                    &nbsp;
                                                                                                    <i class="fa fa-calendar"></i>  {{ recent_activity.dateAdded|date("d F Y") }}
                                                                                                </div>
                                                                                            </div>
                                                                                        </li>
                                                                                    {% endfor %}
                                                                                </ul>


                                                                            </div>
                                                                            <!-- // END col-app -->

                                                                        </div>
                                                                    </div>
                                                                    <!-- // Tab content END -->

                                                                </div>
                                                               
                                                            </div>
                                                        </div>


                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-5">
            <div class="col-separator box">
                <!-- CALENDAR START -->
                <h4 class="bg-primary innerAll border-bottom margin-none">Invoice Date</h4>

                <div class="innerAll bg-primary border-bottom">
                    <div class="media innerAll margin-none">
                        <div class="pull-left">
                            <i class="fa fa-fw fa-calendar fa-3x"></i>
                        </div>
                        <div class="media-body">
                            <p class="strong lead margin-none"></p>

                            <p class="strong margin-none"> {{ invoice.invoiceDate|date("d M Y") }}</p>
                        </div>
                    </div>
                </div>

                <div class="col-separator-h"></div>

                <h4 class="bg-inverse margin-none innerAll">Totals</h4>

                <div class="border-bottom">
                    <div class="innerAll">
                        <span class="badge badge-primary pull-right">{{ invoice.subtotal }}</span> Subtotal
                    </div>
                </div>
                <div class="border-bottom">
                    <div class="innerAll">
                        <span class="badge badge-primary badge-stroke pull-right">{{ invoice.amountDue }}</span> Amount Due
                    </div>
                </div>

                <div class="col-separator-h"></div>
                <h4 class="border-bottom margin-none innerAll">Sub Totals</h4>

                <div id="events-speakers" class="owl-carousel owl-theme">
                    <div class="border-bottom">
                        <div class="innerAll"> 
                            <span class="badge badge-primary pull-right"> 
                                {% if (total_discount == "0" or total_discount == "") %}
                                    0
                                {% else %} 
                                    {{ total_discount }}
                                {% endif %} 
                            </span> Discount (%)
                        </div>
                    </div>
                    <div class="border-bottom">
                        <div class="innerAll"> 
                            <span class="badge badge-primary badge-stroke pull-right"> 
                                {% if (total_surcharge == "0" or total_surcharge == "") %}
                                    0
                                {% else %} 
                                    {{ total_surcharge }}
                                {% endif %} </span> Surcharge (%)
                        </div>
                    </div>
                    <div class="border-bottom">
                        <div class="innerAll">
                            <span class="badge badge-primary badge-stroke pull-right">
                                {% if (total_shipping == "0" or total_shipping == "" ) %}
                                    0
                                {% else %} 
                                    {{ total_shipping }}
                                {% endif %}</span> Shipping ({{ invoice.amountCurrency }})
                        </div>
                    </div>
                    <div class="border-bottom">
                        <div class="innerAll">
                            <span class="badge badge-primary badge-stroke pull-right">
                                {% if (total_vat == "0" or total_vat == "") %}
                                    0
                                {% else %} 
                                    {{ total_vat }}
                                {% endif %}</span> Vat (%)
                        </div>
                    </div>
                </div>

                 
            </div>
        </div>
        <div class="col-lg-3 col-md-12">
            <div class="col-separator box">
                <!-- SCHEDULE START -->

                <!-- // END CALENDAR -->
                <div class="col-separator-h"></div>
                <!-- FRIENDS START -->
                <div class="col-separator-h"></div>

                <div class="col-separator col-separator-last">

                    <div class="innerAll bg-gray border-bottom">
                        <div class="media innerAll margin-none">
                            <div class="pull-left">
                                <i class="fa fa-fw fa-map-marker fa-3x"></i>
                            </div>
                            <div class="media-body">
                                <p class="strong lead margin-none">{{form_widget(form.invoiceStatus, { 'attr': {'class':
								'form-control'} }) }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="innerAll text-center border-bottom">
                        <div class="innerAll">
                            <div class="btn-group">
                                <form action="{{ path('CRMSaleBundle_invoice_delete', { 'id': invoice.id }) }}" method="post" id="frminvoicedel">
                                    {{ form_widget(delete_form) }}
                                    <button type="button" class="btn btn-success"
                                            onclick="location.href = '{{ path('CRMSaleBundle_invoice_edit', {'id':invoice.id }) }}'">
                                        <i class="fa fa-fw fa-edit"></i> Edit
                                    </button>
                                    <button type="submit" id="confirm-delete-invoice" class="btn btn-danger"><i class="fa fa-fw fa-trash-o"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-separator-h"></div>
                    <a href="{{ path('CRMSaleBundle_invoice_view_printed', { 'id': invoice.id }) }}" class="widget widget-icon inverse innerAll inner-2x text-center text-regular">
                        <i class="display-block icon-alarm-clock text-xlarge"></i>
                        <span class="lead">View Invoice</span>
                    </a>

                    <div class="col-separator-h"></div>

                    <a href="" class="widget widget-icon primary innerAll inner-2x text-center text-regular">
                        <i class="display-block  icon-graduation text-xlarge"></i>
                        <span class="lead">Send To Mail</span>
                    </a>

                    <div class="col-separator-h"></div>

                    <a href="" class="widget widget-icon success innerAll inner-2x text-center text-regular">
                        <i class="display-block icon-envelope-2 text-xlarge"></i>
                        <span class="lead">Download Invoice</span>
                    </a>

                    <div class="col-separator-h"></div>
                </div>


            </div>
        </div>
    </div>




{% endblock %}



